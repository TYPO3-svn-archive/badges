<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>General</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<switchableControllerActions>
						<TCEforms>
							<label>Display</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<items>
									<numIndex index="0">
										<numIndex index="0">List</numIndex>
										<numIndex index="1">Badge->list;Badge->listUncached</numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">Show</numIndex>
										<numIndex index="1">Badge->show</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</switchableControllerActions>
					<settings.category>
						<TCEforms>
							<label>Display only these types (else, all types are displayed)</label>
							<displayCond>FIELD:switchableControllerActions:=:Badge->list;Badge->listUncached</displayCond>
							<config>
								<type>select</type>
								<foreign_table>tx_badges_domain_model_category</foreign_table>
								<foreign_table_where>ORDER BY tx_badges_domain_model_category.title</foreign_table_where>
								<size>5</size>
								<minitems>0</minitems>
								<maxitems>999</maxitems>
							</config>
						</TCEforms>
					</settings.category>
					<settings.info>
						<TCEforms>
							<label>Info text</label>
							<displayCond>FIELD:switchableControllerActions:=:Badge->list;Badge->listUncached</displayCond>
							<config>
								<type>text</type>
								<cols>30</cols>
								<rows>6</rows>
							</config>
						</TCEforms>
					</settings.info>
				</el>
			</ROOT>
		</sDEF>
	</sheets>
</T3DataStructure>